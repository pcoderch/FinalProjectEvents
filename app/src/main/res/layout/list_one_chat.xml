<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/black">

    <TextView
        android:id="@+id/chatOtherUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chat_userName"
        android:textSize="30sp"
        android:textColor="@color/teal_flojo"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MessagesInChat"
        app:layout_constraintTop_toBottomOf="@id/chatOtherUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:ignore="MissingConstraints">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/sendMessageBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/sendMessage"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:background="@color/green_claro"
            android:padding="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="@string/write_message"
            android:textSize="20sp"
            android:textColor="@color/teal_flojo"
            android:imeOptions="actionSend"
            android:inputType="textCapCharacters"
            android:maxLines="2"
            android:singleLine="true"
            android:gravity="center_vertical">

        </EditText>

        <Button
            android:id="@+id/sendMessageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/send_message"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/green_oscuro"
            android:gravity="center_vertical">
        </Button>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>