<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="620dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:scaleType="fitXY"
                android:src="@drawable/startimage"
                android:contentDescription="@string/startBackground" />

            <TextView
                android:id="@+id/myImageViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/imageView1"
                android:layout_alignTop="@id/imageView1"
                android:layout_alignEnd="@id/imageView1"
                android:layout_alignBottom="@id/imageView1"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="@string/nameApp"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="620dp"
        android:layout_width="411dp"
        android:layout_height="111dp"
        android:background="@color/white"
        android:paddingTop="24dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="205.5dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ButtonSignIn"
                android:layout_width="180dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="@string/ButtonSignIn"
                android:textColor="@color/black"
                app:cornerRadius="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Decoration"
                android:layout_width="150dp"
                android:layout_height="22dp"
                android:layout_marginStart="100dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/black"
                app:cornerRadius="1000dp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="205.5dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ButtonSignUp"
                android:layout_width="180dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="@string/ButtonSignUp"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Decoration2"
                android:layout_width="120dp"
                android:layout_height="22dp"
                android:layout_marginStart="-10dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/black"
                app:cornerRadius="1000dp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>